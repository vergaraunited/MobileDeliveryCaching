<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>SQLite based  caching for the Manifest Loader and Driver's Truck, Stop, Order Manifest Details.</Description>
    <RepositoryUrl>https://github.com/vergaraunited/MobileDeliveryCaching</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageIconUrl>https://unitedwindowmfg.com/wp-content/uploads/2017/02/New-Logo-4.png</PackageIconUrl>
    <PackageTags />
    <Version>1.1.1</Version>
    <AssemblyVersion>1.1.0.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="sqlite-net-pcl" Version="1.6.292" />
    <PackageReference Include="MobileDeliveryLogger" Version="1.1.1" />
    <PackageReference Include="UMDGeneral" Version="1.2.2" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(Configuration)' != 'Release'">
    <PackageReference Include="sqlite-net-pcl" Version="1.6.292" />
    <ProjectReference Include="../UMDGeneral\MobileDeliveryLogger\MobileDeliveryLogger.csproj" />
    <ProjectReference Include="../UMDGeneral\UMDGeneral.csproj" />
  </ItemGroup>
</Project>
